function getBaseApiUrl(){
    //set the base path to the API URI
    var BaseApiUrl = "/api";
    if (window.location.href.indexOf("/DNSE3/") !==-1){
        BaseApiUrl  = "/DNSE3" + BaseApiUrl ;
    }
    return BaseApiUrl ;
}

